@model IEnumerable<WebLacome.Areas.Admin.Models.LOAIMP>

@{
    ViewBag.Title = "ShowLoaiMP";
    Layout = "~/Areas/Admin/Views/Shared/_LayOutAdmin.cshtml";
}


<h1 style="text-align:center; margin-top:2rem;">Danh Sách Tất Cả Loại Mỹ Phẩm</h1>
<nav class="navbar bg-body-tertiary">
    <a href="/Admin/HomeAdmin/CreateLoai"><button class="" style="margin-left:1rem; padding: 3px; font-size: 16px; width: 100px; height: 55px; font-weight: 600; background-color: black; color: white; font-weight: 600; border-radius: 5px;">Create</button></a>
    <form action="/Admin/HomeAdmin/ShowLoaiMP" method="get" class="form_search_product navbar-form navbar-right" style="margin-bottom:2rem; ">
        <input type="text" name="search" value="" style="background-color: #f5f5f5; border: none; padding: 12px; width: 440px; height: 55px;">
        <button type="submit" class="" style="background-color: black; color: white;font-size:16px;width: 100px;height: 55px;font-weight: 600; border-radius:5px;">SEARCH</button>
    </form>
</nav>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MALOAI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TENLOAI)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MALOAI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENLOAI)
            </td>
            <td>
                <a href="/Admin/HomeAdmin/DeleteLoaiMP?MaLoaiMP=@item.MALOAI"><button class="btn_TC btn_delete" style="padding: 3px; background-color: black; color: white; font-weight: 600; border-radius: 5px;">Delete</button></a>

                <a href="/Admin/HomeAdmin/EditLoai/@item.MALOAI"><button class="btn_TC btn_delete" style="padding: 3px; background-color: black; color: white; font-weight: 600; border-radius: 5px;">Edit</button></a>
                <a href="/Admin/HomeAdmin/DetailsLoai/@item.MALOAI"><button class="btn_TC btn_delete" style="padding: 3px; background-color: black; color: white; font-weight: 600; border-radius: 5px;">Details</button></a>

            </td>
        </tr>
    }

</table>
